<div>
{{#each displayBlogs as |blog| }}
<div class="card">
    <div class="card-header">
      {{blog.post_title}}
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{blog.post_content}}</p>
        <footer class="blockquote-footer">Created by: <cite title="Source Title">{{user.username}}</cite> on {{format_date blog.post_created}}</footer>
      </blockquote>
       <div class="col-md-4">
        <a class="btn btn-sm btn-primary blog-list" href="viewblog/{{blog.id}}">COMMENT</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>

  