{{#each blogs as |blog|}}
<div class="card">
    <div class="card-header">
      {{blog.post_title}}
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{blog.post_content}}</p>
        <footer class="blockquote-footer">Created By: <cite title="Source Title">{{blog.user.username}}</cite> on {{blog.post_created}}</footer>
      </blockquote>
    </div>
  </div>
  {{/each}}

  