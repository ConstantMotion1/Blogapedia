<div>
<div class="card">
    <div class="card-header">
      {{commentBlogs.post_title}}
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{commentBlogs.post_content}}</p>
        <footer class="blockquote-footer">Created by: <cite title="Source Title">{{commentBlogs.user.username}}</cite> on {{format_date commentBlogs.post_created}}</footer>
      </blockquote>
       <div class="col-md-4">
        <input class="form-input" type="text" id="comment" name="content-body"/>
        <button class="btn btn-sm btn-primary blog-list" id="cmtclick" data-id="{{blog.id}}">COMMENT</button>
      </div>
    </div>
  </div>
</div>

        {{#each commentBlogs.comments as |comment|}}
        <div>
        <p>{{comment.post_comment}} by {{comment.user.username}}</p>
        </div> 
        {{/each}}



<script src="/js/comment.js"></script>