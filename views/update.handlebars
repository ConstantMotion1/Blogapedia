<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update your blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="title"></label>
        <input class="form-input" type="text" id="title" name="title" value='{{updateBlogs.post_title}}'/>
      </div>
      <div class="form-group">
        <label for="content"></label>
        <input class="form-input" type="text" id="content" name="content" value='{{updateBlogs.post_content}}'/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="update" data-id="{{updateBlogs.id}}">Update</button>
      </div>
    </form>
  </div>

  
<script src="/js/update.js"></script>